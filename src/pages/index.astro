---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
const spaces = [
	{ title: 'Henkaku Day\nSymposium 2025', image: '/space0.png' },
	{ title: 'Journal of\nDesign and Science', image: '/space1.png' },
	{ title: 'Research\nObservatory', image: '/space2.png' },
];
---

<Layout title="">
	<main>
		<section class="w-content pt-16 pb-64">
			<div>
				<div class="text-center font-bold text-xl mb-16">Featured Spaces</div>
				<div class="grid lg:grid-cols-1 gap-12">
					{
						spaces.map((space) => {
							return (
								<div>
									<div class="relative w-full h-64 bg-cover bg-center" style={`background-image: url(${space.image})`}>
										<div class="absolute inset-0 bg-black bg-opacity-40 flex ">
											<div class="text-white/90 text-4xl font-medium tracking-wide whitespace-pre-line p-4 uppercase">{space.title}</div>
										</div>
									</div>
								</div>
							);
						})
					}
				</div>
			</div>
		</section>
	</main>
</Layout>
